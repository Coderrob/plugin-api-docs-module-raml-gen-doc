{
  "compilerOptions": {
    "baseUrl": "./", // Base directory to resolve non-relative module names
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist", // Output directory after compilation
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "es6" // Adjust based on your requirements
  },
  "exclude": [
    "**/*.test.ts", // Exclude test files from the main compilation
    "node_modules",
    "dist"
  ],
  "include": [
    "**/*.ts", // Include all TypeScript files for compilation
    "**/*.test.ts" // Include test files for testing purposes
  ]
}